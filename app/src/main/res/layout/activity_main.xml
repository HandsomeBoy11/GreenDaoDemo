<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xrd.www.greendaodemo.MainActivity">
    <TextView
        android:id="@+id/tv_way"
        android:padding="13dp"
        android:text="操作方式"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_name"
        android:textSize="14sp"
        android:hint="请输入姓名"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_age"
        android:textSize="14sp"
        android:inputType="number"
        android:hint="请输入年龄"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_sex"
        android:textSize="14sp"
        android:inputType="text"
        android:hint="请输入性别"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_phone"
        android:textSize="14sp"
        android:inputType="number"
        android:maxLength="11"
        android:hint="请输入手机号"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content" />
</LinearLayout>
   <LinearLayout
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:text="添加"
           android:id="@+id/bt_add"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:text="删除"
           android:id="@+id/bt_delete"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:text="修改"
           android:id="@+id/bt_updata"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:text="查询所有"
           android:id="@+id/bt_find_all"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:text="名字查询"
           android:id="@+id/bt_name"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:text="年龄查询"
           android:id="@+id/bt_age"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:text="删除所有"
           android:id="@+id/bt_delete_all"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
       <Button
           android:id="@+id/bt_person"
           android:text="person"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="@color/colorAccent"
           android:textSize="14sp"
           android:layout_height="wrap_content" />
   </LinearLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
